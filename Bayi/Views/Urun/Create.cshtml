@model UrunModel

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<div class="text-center">
<h2>@ViewData["Title"]</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Adi" class="control-label"></label>
                <input asp-for="Adi" class="form-control" />
                <span asp-validation-for="Adi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aciklamasi" class="control-label"></label>
                <input asp-for="Aciklamasi" class="form-control" />
                <span asp-validation-for="Aciklamasi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirimFiyatiModel" class="control-label"></label>
                <input asp-for="BirimFiyatiModel" class="form-control" />
                <span asp-validation-for="BirimFiyatiModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StokMiktari" class="control-label"></label>
                <input asp-for="StokMiktari" class="form-control" />
                <span asp-validation-for="StokMiktari" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SonKullanmaTarihiModel" class="control-label"></label>
                <input asp-for="SonKullanmaTarihiModel" class="form-control" id="tarih" />
                <span asp-validation-for="SonKullanmaTarihiModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KategoriId" class="control-label"></label>
                <select asp-for="KategoriId" class ="form-control" asp-items="ViewBag.Kategoriler">
                    <option value="">-- Kategori Seçiniz --</option>
                </select>
            </div>
            <br />
            <div class="d-grid gap-2 col-2 mx-auto">
                <input type="submit" value="Kaydet" class="btn btn-outline-success" />
                <a asp-action="Index" class="btn btn-outline-warning"> Liste</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="/accessory/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" />
	<script src="/accessory/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>

    <script src="/accessory/bootstrap-datepicker/locales/bootstrap-datepicker.tr.min.js"></script>

    <script>
		$(function(){
			$('#tarih').datepicker({
                autoclose: true,
                todayHighlight: true,
                orientation: "top auto",
                format: "dd.mm.yyyy",
				language: "tr"
            });
		});
	</script>
}
