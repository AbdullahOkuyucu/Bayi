@model RolModel

@{
    ViewData["Title"] = "Rol Detayı";
}
<div class="text-center">
<h1>Rol Detayı</h1>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adi)
        </dt>
        <dd class="col-sm-10" style="padding: 0 !important;">
            @Html.DisplayFor(model => model.Adi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hesap)
        </dt>
        @if (Model.Hesap != null && Model.Hesap.Count > 0)
        {
            <dd class="col-sm-10">
                <ol style="padding: 0;">
                    @foreach (var user in Model.Hesap)
                    {
                        <li>@user.KullaniciAdi</li>
                    }
                </ol>
            </dd>
        }
        else
        {
            <dd class="col-sm-10" style="padding: 0 !important;">
                <span>Kullanıcı Bulunamadı</span>
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-success">Liste</a>
</div>
